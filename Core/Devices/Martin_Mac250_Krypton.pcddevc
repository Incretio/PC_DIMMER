    		set_channel('color1',88,88,0);
    	end;
    	9:
    	begin
    		set_channel('color1',99,99,0);
    	end;
    	10:
    	begin
    		set_channel('color1',110,110,0);
    	end;
    	11:
    	begin
    		set_channel('color1',121,121,0);
    	end;
    	12:
    	begin
    		set_channel('color1',132,132,0);
    	end;
    	13:
    	begin
    		set_channel('color1',143,143,0);
    	end;
    end;
  end;
  procedure PositionXYChange(Top, Left: Integer);
  var
	pan, tilt, panfine, tiltfine:single;
  begin
		// Scannersteuerung (Kartesische Koordinaten)
		pan:=((PositionXY.Left+(PositionXY.Width div 2))/fadenkreuz.Width)*255;
		tilt:=((PositionXY.Top+(PositionXY.Height div 2))/fadenkreuz.Height)*255;
	// Ausgabe
	if panmirror.checked then
	begin
		dontrefresh:=true;
		set_channel('pan',trunc(255-pan),trunc(255-pan),0);
		dontrefresh:=true;
		set_channel('panfine',trunc(frac(255-pan)*255),trunc(frac(255-pan)*255),0);
	end	else
	begin
		dontrefresh:=true;
		set_channel('pan',trunc(pan),trunc(pan),0);
		dontrefresh:=true;
		set_channel('panfine',trunc(frac(pan)*255),trunc(frac(pan)*255),0);
	end;
	if tiltmirror.checked then
	begin
		dontrefresh:=true;
		set_channel('tilt',trunc(255-tilt),trunc(255-tilt),0);
		dontrefresh:=true;
		set_channel('tiltfine',trunc(frac(255-tilt)*255),trunc(frac(255-tilt)*255),0);
	end	else
	begin
		dontrefresh:=true;
		set_channel('tilt',trunc(tilt),trunc(tilt),0);
		dontrefresh:=true;
		set_channel('tiltfine',trunc(frac(tilt)*255),trunc(frac(tilt)*255),0);
	end;
  end;
  procedure ChangeDimmer;
  begin
		dontrefresh:=true;
 		set_channel('dimmer',dimmerslider.position,dimmerslider.position,0);
  end;
  procedure ChangeGobo;
  begin
    case gobobox.itemindex of
    	0:
    	begin
				set_channel('gobo1',0,0,0);
    	end;
    	1:
    	begin
				if goboshakeon.checked then
	    		set_channel('gobo1',195+goboshakeslider.position,195+goboshakeslider.position,0)
  			else
  				set_channel('gobo1',5,5,0);
    	end;
    	2:
    	begin
				if goboshakeon.checked then
	    		set_channel('gobo1',180+goboshakeslider.position,180+goboshakeslider.position,0)
  			else
  				set_channel('gobo1',11,11,0);
    	end;
    	3:
    	begin
				if goboshakeon.checked then
	    		set_channel('gobo1',165+goboshakeslider.position,165+goboshakeslider.position,0)
  			else
  				set_channel('gobo1',16,16,0);
    	end;
    	4:
    	begin
				if goboshakeon.checked then
	    		set_channel('gobo1',150+goboshakeslider.position,150+goboshakeslider.position,0)
  			else
  				set_channel('gobo1',21,21,0);
    	end;
    	5:
    	begin
				if goboshakeon.checked then
	    		set_channel('gobo1',135+goboshakeslider.position,135+goboshakeslider.position,0)
  			else
  				set_channel('gobo1',26,26,0);
    	end;
    	6:
    	begin
				if goboshakeon.checked then
	    		set_channel('gobo1',120+goboshakeslider.position,120+goboshakeslider.position,0)
  			else
  				set_channel('gobo1',31,31,0);
    	end;
    	7:
    	begin
				if goboshakeon.checked then
	    		set_channel('gobo1',105+goboshakeslider.position,105+goboshakeslider.position,0)
  			else
  				set_channel('gobo1',36,36,0);
    	end;
    end;
  end;
