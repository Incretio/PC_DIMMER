  procedure InitDevice(Device: String);
  begin
    // diese Funktion wird für alle Geräte diesen Typs beim ersten Start des PC_DIMMERs ausgeführt.
  end;
  procedure FormShow;
  begin
  	dontrefresh:=false;
  end;
  procedure FormRefresh(channel:Integer);
  var
    wert:integer;
  begin
    case channel of
    	0: // Shutter
    	begin
    		wert:=get_channel('shutter');
    		case wert of
    			0..19: shutterbox.itemindex:=0;
    			20..49: shutterbox.itemindex:=1;
    			50..72:
					begin
						shutterbox.itemindex:=2;
		    		if not dontrefresh then
							shutterslider.position:=wert-50;
					end;
    			73..79: shutterbox.itemindex:=1;
    			80..99:
					begin
						shutterbox.itemindex:=3;
		    		if not dontrefresh then
							shutterslider.position:=wert-80;
					end;
    			100..119:
					begin
						shutterbox.itemindex:=4;
		    		if not dontrefresh then
							shutterslider.position:=wert-100;
					end;
    			120..127: shutterbox.itemindex:=1;
    			128..147: shutterbox.itemindex:=5;
    			148..167: shutterbox.itemindex:=6;
    			168..187: shutterbox.itemindex:=7;
    			188..190: shutterbox.itemindex:=1;
    			191..193: shutterbox.itemindex:=8;
    			194..169: shutterbox.itemindex:=9;
    			197..199: shutterbox.itemindex:=10;
    			200..202: shutterbox.itemindex:=11;
    			203..207: shutterbox.itemindex:=1;
    			218..227: shutterbox.itemindex:=1;
    			238..247: shutterbox.itemindex:=1;
    		end;
    	end;
    	1: // Dimmer
    	begin
    		wert:=get_channel('dimmer');
    		if not dontrefresh then
    		begin
    			dimmerslider.position:=wert;
    		end;
    	end;
    	2: // Color1
    	begin
    		wert:=get_channel('color1');
    		case wert of
    			0: colorbox.itemindex:=0;
    			11: colorbox.itemindex:=1;
    			22: colorbox.itemindex:=2;
    			33: colorbox.itemindex:=3;
    			44: colorbox.itemindex:=4;
    			55: colorbox.itemindex:=5;
    			66: colorbox.itemindex:=6;
    			77: colorbox.itemindex:=7;
    			88: colorbox.itemindex:=8;
    			99: colorbox.itemindex:=9;
    			110: colorbox.itemindex:=10;
    			121: colorbox.itemindex:=11;
    			132: colorbox.itemindex:=12;
    			143: colorbox.itemindex:=13;
    		end;
    	end;
    	3: // Gobo1
    	begin
    		wert:=get_channel('gobo1');
				case wert of
					0..4: gobobox.itemindex:=0;
					5..10: gobobox.itemindex:=1;
					11..15: gobobox.itemindex:=2;
					16..20: gobobox.itemindex:=3;
					21..25: gobobox.itemindex:=4;
					26..30: gobobox.itemindex:=5;
					31..35: gobobox.itemindex:=6;
					36..42: gobobox.itemindex:=7;
				end;
			end;
    	4..5: // Gobo1Rotation
    	begin
    		wert:=get_channel('gobo1rot');
    		if not dontrefresh then
    		begin
    			goborotslider.position:=wert;
    		end;
    	end;
		6: // Fokus
    	begin
    		wert:=get_channel('focus');
    		if not dontrefresh then
    		begin
    			focusslider.position:=wert;
    		end;
    	end;
    	7: // Prisma
    	begin
    		wert:=get_channel('prisma');
    		if not dontrefresh then
			case wert of
    			0..19: prismabox.itemindex:=0;
    			20..79: prismabox.itemindex:=1;
    			80..89: prismabox.itemindex:=2;
    			90..149: prismabox.itemindex:=1;
    			150..215: prismabox.itemindex:=0;
    			216..220: prismabox.itemindex:=3;
					221..225: prismabox.itemindex:=4;
					226..230: prismabox.itemindex:=5;
					231..235: prismabox.itemindex:=6;
					236..240: prismabox.itemindex:=7;
					241..245: prismabox.itemindex:=8;
					246..250: prismabox.itemindex:=9;
					251..255: prismabox.itemindex:=10;    			
    		end;
    	end;
    	8..11: // Pan/Tilt
    	begin
					PositionXY.Left:=round(Fadenkreuz.Width * (get_channel('pan')+get_channel('panfine')/256)/255)-(PositionXY.Width div 2);
					PositionXY.Top:=round(Fadenkreuz.Height * (get_channel('tilt')+get_channel('tiltfine')/256)/255)-(PositionXY.Height div 2);
    	end;
    	12: // Pan/Tilt-Speed
    	begin
    		wert:=get_channel('speed');
    		if not dontrefresh then
    			pantiltslider.position:=wert;
    	end;
		13: // Effekt
		begin
		end;
    end;
 		dontrefresh:=false;
  end;
  procedure FormClose;
  begin
    // diese Funktion wird bei jedem Schließen der Form ausgeführt.
  end;
  procedure ColorBoxChange;
  begin
    case colorbox.itemindex of
    	0:
    	begin
    		set_channel('color1',0,0,0);
    	end;
    	1:
    	begin
    		set_channel('color1',11,11,0);
    	end;
    	2:
